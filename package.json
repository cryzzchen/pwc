{
  "workspaces": [
    "packages/*"
  ],
  "name": "pwc-project",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "setup": "npm run clean && pnpm install --reporter=append-only",
    "clean": "rm -rf node_modules packages/*/lib packages/*/es",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx ./",
    "lint:fix": "npm run lint -- --fix",
    "lint:diff": "ts-node ./scripts/lint-diff.ts"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint:diff"
    }
  },
  "dependencies": {
    "@commitlint/cli": "^11.0.0",
    "@appworks/spec": "^1.3.2",
    "@types/eslint": "^7.28.0",
    "eslint": "^7.0.0",
    "ts-node": "^8.6.1",
    "typescript": "^4.0.0",
    "stylelint": "^13.0.0",
    "chalk": "^4.0.0",
    "@types/node": "^17.0.19",
    "husky": "^4.1.0"
  }
}
