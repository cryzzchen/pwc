<template>
  <div class="content">
    <button @click={{addCount}}>+</button>
    {{count}}
    <button @click={{reduceCount}}>-</button>
  </div>
</template>

<script>
@customElement('custom-component')
export default class CustomComponent extends HTMLElement {
  @reactive
  accessor count = 0;

  addCount() {
    this.count = this.count + 1;
  }

  reduceCount() {
    this.count = this.count - 1;
  }
}
</script>

<style>
.content {
  color: blue;
}
</style>
